# Configuración por defecto para los shields del dongle

# Configuración del dongle central
if SHIELD_MATRICIALSPLIT_DONGLE

# Nombre del teclado (debe ser menos de 16 caracteres)
config ZMK_KEYBOARD_NAME
    default "Mat Dongle"

# El dongle es el dispositivo central del split
config ZMK_SPLIT_ROLE_CENTRAL
    default y

# Habilitar funcionalidad split
config ZMK_SPLIT
    default y

endif

# Configuración para periféricos izquierdo y derecho
if SHIELD_MATRICIALSPLIT_PERIPHERAL_LEFT || SHIELD_MATRICIALSPLIT_PERIPHERAL_RIGHT

# Los periféricos NO son centrales (son periféricos)
config ZMK_SPLIT_ROLE_CENTRAL
    default n

# Habilitar funcionalidad split
config ZMK_SPLIT
    default y

# Los periféricos usan BLE para comunicarse con el dongle
config ZMK_SPLIT_BLE
    default y

endif