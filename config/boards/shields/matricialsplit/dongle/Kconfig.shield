# Matricial Split Dongle Shields Configuration

# Dongle central - recibe de ambos periféricos y se conecta al host
config SHIELD_MATRICIALSPLIT_DONGLE
    def_bool $(shields_list_contains,matricialsplit_dongle)

# Lado izquierdo como periférico - solo reporta teclas al dongle
config SHIELD_MATRICIALSPLIT_PERIPHERAL_LEFT
    def_bool $(shields_list_contains,matricialsplit_peripheral_left)

# Lado derecho como periférico - solo reporta teclas al dongle
config SHIELD_MATRICIALSPLIT_PERIPHERAL_RIGHT
    def_bool $(shields_list_contains,matricialsplit_peripheral_right)